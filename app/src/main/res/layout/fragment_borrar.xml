<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root_layout"
        android:background="@color/principalBlanco">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

        <TextView
                android:text="@string/tvBORRAR_MEDICION"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:id="@+id/tvBorrarMedicion"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_20"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="326dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="@string/etDiaBorrar"
                    android:textSize="@dimen/margin_20"
                    android:paddingLeft="@dimen/margin_40"
                    android:id="@+id/etDiaBorrar" android:clickable="false"/>

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/principalBlanco"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:src="@mipmap/calendar_color_25px"
                    android:id="@+id/btFechaBorrar"/>
        </LinearLayout>



    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/botonBorrar"
            android:backgroundTint="@color/principalNaranja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@mipmap/ic_chevron_right_circle_white_48dp"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_16"
            android:scaleType="center"/>

</android.support.design.widget.CoordinatorLayout>
